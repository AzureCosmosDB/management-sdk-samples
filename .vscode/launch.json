{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug: C# + Python",
            "configurations": [
                "C#: Debug sample",
                "Python: Debug sample"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Python: Debug sample",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/app.py",
            "cwd": "${workspaceFolder}/Python",
            "envFile": "${workspaceFolder}/Python/config.env",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "C#: Debug sample",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:csharp",
            "env": { "DOTNET_ENVIRONMENT": "Development" },
            "program": "${workspaceFolder}/Csharp/bin/Debug/net9.0/Csharp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Csharp",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Go: Debug sample",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/Go",
            "cwd": "${workspaceFolder}/Go"
        },
        {
            "name": "Java: Debug sample",
            "type": "java",
            "request": "launch",
            "mainClass": "com.example.CosmosDBManagement",
            "cwd": "${workspaceFolder}/Java"
        }
    ]
}